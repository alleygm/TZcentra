{% extends 'base.html.twig' %}

{% block title %}Hello ShowProductsByCategoryController!{% endblock %}

{% block body %}
<style>
</style>

<div class="second-wrapper">
    <h1>Товары из категории: {{category.getName()}}</h1>
    <a style="margin-left:5px;" href="/category"><--Назад</a>
    {% set counter = 1 %}
    <table class="exampleTable">
  <thead>
    <tr>
        <th scope="col">№</th>
        <th scope="col">Наименование</th>
        <th scope="col">Категория</th>
    </tr>
  </thead>
        {% for product in products %}
            <tr>
            <th>
            {{ counter }}
            
            </th>
            <th> 
                {{ product.getName() }}
            </th>
            <th> 
                {{ product.getCategory().getName() }}
            </th>
            </tr>
            {% set counter = counter + 1 %}
        {% endfor %}
</table>
</div>
{% endblock %}
