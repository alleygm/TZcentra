{% extends 'base.html.twig' %}

{% block title %}Главная страница{% endblock %}

{% block body %}
<style>
   
</style>


<div>
    {% set counter = 1 %}
    <h1>Главная страница</h1>
    Список всех товаров:
    <table class="exampleTable">
  <thead>
    <tr>
        <th scope="col">№</th>
        <th scope="col">Наименование</th>
        <th scope="col">Категория</th>
    </tr>
  </thead>
        {% for product in pagination %}
            <tr>
            <th>
            {{ counter }}
            
            </th>
            <th> 
