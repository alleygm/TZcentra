{% block body %}
<div class="modal fade" id="{{url}}"> 
        <div class="modal-dialog modal-lg"> 
            <div class="modal-content"> 
                <div class="modal-header"> 
                    <h5 class="modal-title"></h5> 
                    <button type="button" class="btn-close" data-bs-dismiss="modal"> </button> 
                </div> 
                <div class="modal-body row"> 
                    <div class="col">
                    </div>
                    <div class="col">
                        {{ form_start(form) }}
                            {{form_row(form.name)}}
                            {{form_row(form.author)}}
                            {{form_row(form.status)}}
                            {{form_row(form.start_at)}}
                            {{form_row(form.end_at)}}
                            {{form_row(form.comment)}}
                            {{form_row(form.edit, { 'attr': {'onclick': 'editMode()' }})}}
                            {{form_row(form.save, { 'attr': {'style': 'display:none;' }})}}
                            {{form_row(form.reset, { 'attr': {'style': 'display:none;', 'onclick': 'editMode()' }})}}
                            {{form_row(form.close, {'attr': {'data-bs-dismiss': 'modal'}})}}
                            {{form_row(form.id)}}
                        {{ form_end(form) }}
                    </div> 
                </div>
            </div> 
        </div> 
    </div>
{% endblock %}
{% block stylesheets %}

{% endblock %}
{% block javascripts %}
    <script>
        function editMode()
        {
            $("#book_view_form_save").toggle();
            $("#book_view_form_reset").toggle();
            $("#book_view_form_close").toggle();
            $("#book_view_form_edit").toggle(); // if currently visible
            $('#book_view_form :input:not(:button)').prop('readonly', function(i, val) {
                return !val;
            });
        }
    </script>
{% endblock %}
